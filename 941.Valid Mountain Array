'''
If it's a moutain array, the array is increasing and later dcreasing.
We keep a flag var 'direction' to mark the increasing with 1 and -1 otherwise.
'''

class Solution:
    def validMountainArray(self, A):
        """
        :type A: List[int]
        :rtype: bool
        """
        n = len(A)
        if n < 3 or A[0] >= A[1]:
            return False
        direction = 1
        for i in range(1, n):
            if direction == -1 and A[i] >= A[i-1]:
                return False
            else:
                if A[i] == A[i-1]:
                    return False
                elif A[i] < A[i-1]:
                    direction = -1
        return direction == -1